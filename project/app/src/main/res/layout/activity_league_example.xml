<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_1d35ab"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tech.sud.mgp.hello.ui.common.widget.HSTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:topbar_backSrc="@drawable/icon_navi_back_white"
        app:topbar_titleText="@string/example"
        app:topbar_titleTextColor="@color/white"
        android:paddingTop="14dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/example_step_1"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_round_4d000000" />

            <View
                android:layout_width="347dp"
                android:layout_height="143dp"
                android:background="@drawable/ic_example_step_1"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/example_step_2"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_round_4d000000" />

            <View
                android:layout_width="311dp"
                android:layout_height="360dp"
                android:background="@drawable/ic_example_step_2"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/example_step_3"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_round_4d000000" />

            <View
                android:layout_width="205dp"
                android:layout_height="503dp"
                android:background="@drawable/ic_example_step_3"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/example_step_4"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_round_4d000000" />

            <View
                android:layout_width="311dp"
                android:layout_height="360dp"
                android:background="@drawable/ic_example_step_4"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="1dp"
                android:paddingHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/example_step_5"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_round_4d000000" />

            <View
                android:layout_width="205dp"
                android:layout_height="421dp"
                android:background="@drawable/ic_example_step_5"
                android:layout_marginTop="10dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>