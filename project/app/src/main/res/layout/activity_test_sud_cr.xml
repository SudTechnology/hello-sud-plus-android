<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/c_f5f6fb"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tech.sud.mgp.hello.ui.common.widget.HSTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:topbar_titleText="游戏测试"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:background="#F2F3F7"
            android:hint="输入你自定义的userId"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:paddingStart="8dp"
            android:paddingEnd="47dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#aaaaaa"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_uninit_sdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uninitSDK"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始循环开关游戏"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_stop_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束循环"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:textSize="20sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>