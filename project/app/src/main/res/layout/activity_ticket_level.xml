<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_ticket_level_bg"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tech.sud.mgp.hello.ui.common.widget.HSTopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:topbar_backSrc="@drawable/icon_navi_back_white"
        app:topbar_titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <tech.sud.mgp.hello.ui.scenes.ticket.widget.TicketLevelNoticeView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/ic_notice_bg"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 初级 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_small"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_ticket_level_small"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_win_award_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/c_ffce45"
                    android:textStyle="bold"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="21dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/fl_avatars_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="105dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_count_people_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="101dp"
                    android:textSize="12sp"
                    android:textColor="#b3ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/fl_avatars_small"
                    app:layout_constraintTop_toTopOf="@id/fl_avatars_small" />

                <TextView
                    android:id="@+id/tv_join_small"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/c_ffcc40"
                    android:text="@string/now_participation"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/ic_ticket_level_join_bg_small"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/ic_ticket_level_gold_small"
                android:layout_marginBottom="69dp"
                app:layout_constraintBottom_toBottomOf="@id/cl_small"
                app:layout_constraintEnd_toEndOf="@id/cl_small" />

            <!-- 中级 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_middle"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_ticket_level_middle"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@id/cl_small">

                <TextView
                    android:id="@+id/tv_win_award_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/c_ffce45"
                    android:textStyle="bold"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="21dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/fl_avatars_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="105dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_count_people_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="101dp"
                    android:textSize="12sp"
                    android:textColor="#b3ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/fl_avatars_middle"
                    app:layout_constraintTop_toTopOf="@id/fl_avatars_middle" />

                <TextView
                    android:id="@+id/tv_join_middle"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/c_ffcc40"
                    android:text="@string/now_participation"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingHorizontal="14dp"
                    android:background="@drawable/ic_ticket_level_join_bg_middle"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/ic_ticket_level_gold_middle"
                android:layout_marginBottom="69dp"
                app:layout_constraintBottom_toBottomOf="@id/cl_middle"
                app:layout_constraintEnd_toEndOf="@id/cl_middle" />

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_hot"
                android:layout_marginBottom="117dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cl_middle" />

            <!-- 高级 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_high"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ic_ticket_level_high"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="33dp"
                app:layout_constraintTop_toBottomOf="@id/cl_middle">

                <TextView
                    android:id="@+id/tv_win_award_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/c_ffce45"
                    android:textStyle="bold"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="120dp"
                    android:layout_marginTop="21dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/fl_avatars_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="105dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_count_people_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="101dp"
                    android:textSize="12sp"
                    android:textColor="#b3ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/fl_avatars_high"
                    app:layout_constraintTop_toTopOf="@id/fl_avatars_high" />

                <TextView
                    android:id="@+id/tv_join_high"
                    android:layout_width="88dp"
                    android:layout_height="30dp"
                    android:textSize="14sp"
                    android:textColor="@color/c_ffcc40"
                    android:text="@string/now_participation"
                    android:gravity="center"
                    android:background="@drawable/ic_ticket_level_join_bg_high"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingHorizontal="14dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/ic_ticket_level_gold_high"
                android:layout_marginBottom="69dp"
                app:layout_constraintBottom_toBottomOf="@id/cl_high"
                app:layout_constraintEnd_toEndOf="@id/cl_high" />

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_hot"
                android:layout_marginBottom="117dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cl_high" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>