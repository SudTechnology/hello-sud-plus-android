<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="291dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_f5f6fb">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:src="@drawable/ic_dialog_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="343dp"
        android:layout_height="201dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_r8_ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_000000"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/add_robot_ai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textColor="@color/c_000000"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="89dp"
            android:text="@string/add_large_model_ai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/c_d1d1d1"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:background="@color/c_d1d1d1"
            android:layout_marginStart="130dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_add_robot"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_b9ffd2_3cffb6"
            android:layout_margin="16dp"
            android:text="@string/add_robot"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/c_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_default_tone"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_b9ffd2_3cffb6"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="89dp"
            android:text="@string/default_tone_ai"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/c_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_custom_tone"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_b9ffd2_3cffb6"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="145dp"
            android:text="@string/custom_tone_ai"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/c_000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>