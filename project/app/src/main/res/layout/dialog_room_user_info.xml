<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container_bottom"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="55dp" />

        <TextView
            android:id="@+id/tv_send_gift"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="@string/send_gift"
            android:gravity="center"
            android:minWidth="104dp"
            android:background="@color/black"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="33dp" />

    </LinearLayout>

    <tech.sud.mgp.hello.common.widget.view.round.RoundedImageView
        android:id="@+id/iv_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:riv_oval="true"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/container_bottom"
        app:layout_constraintBottom_toTopOf="@id/container_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>