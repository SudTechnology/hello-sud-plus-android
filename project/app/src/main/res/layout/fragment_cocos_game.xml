<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 点我试玩 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_click_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/shape_click_play_bg">

        <TextView
            android:id="@+id/tv_click_play"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginBottom="126dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/click_me_play"
            android:background="@drawable/shape_corner_stroke_1_ffffff_solid_1affffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 结束页面 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#99000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <tech.sud.mgp.hello.common.widget.view.CornersConstraintLayout
                android:id="@+id/container_finish_top"
                android:layout_width="255dp"
                android:layout_height="375dp"
                app:ccl_cornerRadius="12dp"
                android:background="@color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/iv_game_cover"
                    android:layout_width="255dp"
                    android:layout_height="295dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <tech.sud.mgp.hello.common.widget.view.round.RoundedImageView
                    android:id="@+id/iv_game_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:riv_oval="true"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="149dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </tech.sud.mgp.hello.common.widget.view.CornersConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/container_finish_top">

                <TextView
                    android:id="@+id/tv_operate"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/game_operate_btn"
                    android:background="@drawable/shape_corner_stroke_1_ffffff_solid_1affffff"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_play_again"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_play_again"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/try_playing_again"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/shape_corner_stroke_1_ffffff_solid_1affffff"
                    app:layout_constraintStart_toEndOf="@id/tv_operate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_mask_white_back"
        android:padding="5dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <ImageView
        android:id="@+id/iv_close_play"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/ic_close_play_game"
        android:layout_marginEnd="6dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>