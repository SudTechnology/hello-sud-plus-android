<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FB">

    <!-- 标题 -->
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/tabs_set"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 主要内容 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- 第一块 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c_1a1a1a"
                    android:text="@string/occupy_size"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold" />

                <tech.sud.mgp.hello.ui.main.settings.AppSizeView
                    android:id="@+id/app_size_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c_dddddd"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp" />

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_version_info"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/version_info" />

            </LinearLayout>

            <!-- 第二块 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp">

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_change_rtc"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/change_rtc_service" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c_dddddd"
                    android:layout_marginHorizontal="20dp" />

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_change_language"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/change_language" />

            </LinearLayout>

            <!-- 第三块 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp">

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_github"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/github" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c_dddddd"
                    android:layout_marginHorizontal="20dp" />

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_open_source_licenses"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/open_source_licenses" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c_dddddd"
                    android:layout_marginHorizontal="20dp" />

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_user_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/user_agreement_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/c_dddddd"
                    android:layout_marginHorizontal="20dp" />

                <tech.sud.mgp.hello.ui.main.settings.SettingButton
                    android:id="@+id/button_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:sb_name="@string/user_privacy_title" />

            </LinearLayout>

            <!-- 底部提示 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/c_8a8a8e"
                android:text="@string/setting_contact1_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>