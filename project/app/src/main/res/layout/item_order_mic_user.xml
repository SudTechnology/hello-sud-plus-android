<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="42dip"
    android:paddingStart="6dip"
    android:paddingEnd="6dip">

    <tech.sud.mgp.hello.common.widget.view.round.RoundedImageView
        android:id="@+id/avatar_riv"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_width="1dp"
        app:riv_oval="true" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/checked_iv"
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:translationY="5dp"
        android:scaleType="center"
        android:src="@drawable/selector_order_user_checked"
        app:layout_constraintEnd_toEndOf="@+id/avatar_riv"
        app:layout_constraintBottom_toBottomOf="@id/avatar_riv"
        app:layout_constraintStart_toStartOf="@+id/avatar_riv" />

</androidx.constraintlayout.widget.ConstraintLayout>