<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <tech.sud.mgp.hello.common.widget.view.round.RoundedImageView
        android:id="@+id/stall_item_iv_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:riv_oval="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/stall_item_tv_captain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="@string/captain"
        android:layout_marginTop="61dp"
        android:paddingHorizontal="7dp"
        android:background="@drawable/shape_cross_app_captain_bg"
        app:layout_constraintStart_toStartOf="@id/stall_item_iv_icon"
        app:layout_constraintEnd_toEndOf="@id/stall_item_iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stall_item_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/stall_item_iv_icon"
        app:layout_constraintEnd_toEndOf="@id/stall_item_iv_icon"
        app:layout_constraintTop_toBottomOf="@id/stall_item_iv_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>