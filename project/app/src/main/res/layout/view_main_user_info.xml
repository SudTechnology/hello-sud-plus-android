<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <tech.sud.mgp.hello.common.widget.view.round.RoundedImageView
        android:id="@+id/user_info_iv_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:riv_oval="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_info_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textColor="#1a1a1a"
        android:textSize="20sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_user_id"
        app:layout_constraintStart_toEndOf="@id/user_info_iv_icon"
        app:layout_constraintTop_toTopOf="@id/user_info_iv_icon" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:textColor="#13141a"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/user_info_iv_icon"
        app:layout_constraintStart_toStartOf="@id/user_info_tv_name"
        app:layout_constraintTop_toBottomOf="@id/user_info_tv_name" />

</merge>