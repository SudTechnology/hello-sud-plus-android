<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Hellosudandroid" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:forceDarkAllowed">false</item>  <!-- 此字段用于禁用全局反色 -->
    </style>

    <!--解决启动白屏问题,在启动页通过Theme引用-->
    <style name="SplashTheme" parent="Theme.Hellosudandroid">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/branded_launch_screens</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>