<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="41dip"
    android:paddingStart="6dip"
    android:paddingEnd="6dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatar_bg_cl"
        android:layout_width="34dip"
        android:layout_height="34dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <tech.sud.mgp.common.widget.view.round.RoundedImageView
            android:id="@+id/avatar_riv"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_width="1dp"
            app:riv_oval="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatar_text_bg_cl"
        android:layout_width="28dip"
        android:layout_height="14dip"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/avatar_text_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_000000"
            android:gravity="center"
            android:textColor="@color/c_ffffff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/checked_iv"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:scaleType="center"
        android:src="@drawable/audio_ic_checked"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/avatar_bg_cl"
        app:layout_constraintTop_toTopOf="@+id/avatar_bg_cl" />

</androidx.constraintlayout.widget.ConstraintLayout>