<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dip"
    android:paddingEnd="16dip"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dip">

        <TextView
            android:id="@+id/coin_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/c_ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/to_recharge_tv"
            android:layout_marginLeft="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ff3b2f"
            android:textSize="12sp" />

        <Space
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="1dip" />

        <LinearLayout
            android:id="@+id/bottom_right_ll"
            android:paddingStart="15dip"
            android:gravity="center_vertical"
            android:layout_width="110sp"
            android:padding="2dp"
            android:background="@color/c_ffffff"
            android:orientation="horizontal"
            android:layout_height="32dip">

            <TextView
                android:id="@+id/send_gift_count_tv"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="@color/c_000000"
                android:text="x1"
                android:layout_width="35dp"
                android:gravity="center_vertical|end"
                android:layout_height="28dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/send_gift_bottom_arrow_iv"
                android:scaleType="centerCrop"
                android:tint="@color/c_ffffff"
                android:src="@drawable/audio_icon_toup_arrow"
                android:layout_width="20dp"
                android:background="@color/c_000000"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/present_tv"
                android:textSize="14sp"
                android:textColor="@color/c_000000"
                android:gravity="center"
                android:layout_marginLeft="10dip"
                android:text="@string/audio_dialog_gift_present"
                android:layout_width="56dip"
                android:layout_height="32dip" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>